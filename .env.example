# 資料庫配置
MONGODB_URI=mongodb://localhost:27017/smart-wardrobe

# JWT密鑰
JWT_SECRET=your-super-secret-jwt-key-here

# AI服務配置 (選擇一個或多個)
# 推薦使用順序: OpenAI > Gemini > Anthropic > Google Vision

# OpenAI GPT-4 Vision (推薦)
OPENAI_API_KEY=your-openai-api-key

# Google Gemini Pro Vision (免費額度大)
GEMINI_API_KEY=your-gemini-api-key

# Anthropic Claude 3 Vision
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Vision API (備用)
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# 偏好的AI服務 (openai/gemini/anthropic/google-vision)
PREFERRED_AI_SERVICE=gemini

# Cloudinary配置 (可選)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# 服務器配置
PORT=5000
NODE_ENV=development