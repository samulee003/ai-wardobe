{
  "name": "smart-wardrobe-app",
  "version": "1.0.0",
  "description": "智能衣櫃管理APP - 幫助ADHD用戶整理衣物和穿搭建議",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "server": "nodemon server/index.js",
    "prebuild": "node scripts/pre-build-check.js",
    "build": "npm run install:client && npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "echo 'Server build complete'",
    "install:client": "cd client && npm install",
    "install:all": "npm install && npm run install:client",
    "verify:deps": "node scripts/verify-dependencies.js",
    "fix:deps": "node scripts/dependency-fixer.js",
    "build:zeabur": "node scripts/zeabur-build.js",
    "build:monitor": "node scripts/build-monitor.js",
    "diagnose": "node scripts/error-diagnostics.js",
    "validate": "node scripts/build-validator.js",
    "test:build": "node scripts/automated-tests.js",
    "platform:detect": "node scripts/platform-adapter.js",
    "platform:build": "node scripts/platform-adapter.js --build",
    "backup": "node scripts/build-recovery.js backup",
    "restore": "node scripts/build-recovery.js restore",
    "emergency": "node scripts/build-recovery.js emergency",
    "test:integration": "node scripts/integration-tests.js",
    "dev:tools": "node scripts/dev-tools.js",
    "deploy:zeabur": "npm run fix:deps && npm run build && echo 'Ready for Zeabur deployment'",
    "postinstall": "npm run install:client"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "cloudinary": "^1.40.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.9.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": ["wardrobe", "fashion", "ai", "adhd", "organization"],
  "author": "Smart Wardrobe Team",
  "license": "MIT"
}